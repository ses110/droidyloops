<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context="com.example.droidyloops.dloops.MainActivity"
    android:background="@color/background_dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/textView"
        android:textColor="@color/grey"
        android:textSize="@dimen/main_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

        <Button
            style="@style/main_buttons"
            android:text="@string/create_song"
            android:id="@+id/button"
            android:onClick="createSong"
            android:background="@drawable/button_blue"
            android:layout_below="@+id/textView"
            android:layout_marginTop="10dp" />

        <Button
            style="@style/main_buttons"
            android:text="@string/edit_song"
            android:id="@+id/button2"
            android:background="@drawable/button_orange"
            android:layout_below="@+id/button"
            android:layout_marginTop="10dp" />

        <Button
            style="@style/main_buttons"
            android:text="@string/collaborate"
            android:id="@+id/button3"
            android:background="@drawable/button_red"
            android:layout_below="@+id/button2"
            android:layout_marginTop="10dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intro_paragraph"
        android:id="@+id/textView2"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

</RelativeLayout>
