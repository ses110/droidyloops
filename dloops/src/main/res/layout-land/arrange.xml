<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/greyblue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/arrange_title"
        android:id="@+id/title"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mute_label"
        android:id="@+id/mute_chk"
        android:checked="true"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/copy"
        android:id="@+id/copy_btn"
        android:layout_marginBottom="15dp"
        android:background="@color/bluelight"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/paste"
        android:id="@+id/paste_btn"
        android:background="@color/orangelight"
        android:layout_alignTop="@+id/copy_btn"
        android:layout_toLeftOf="@+id/title" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/delete_label"
        android:id="@+id/delete_btn"
        android:background="@color/redorange"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@+id/paste_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:id="@+id/new_snd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_sound"
        android:background="@color/new_btn"
        android:layout_alignTop="@+id/delete_btn"
        android:layout_alignRight="@+id/title"
        android:layout_alignEnd="@+id/title"
        android:onClick="newSound"/>

    <FrameLayout
        android:id="@+id/frmlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>