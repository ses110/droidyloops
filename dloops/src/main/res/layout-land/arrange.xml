<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/arrange_title"
        android:id="@+id/title"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="28dp" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="30dp"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/TrackLabels"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@color/background_track_labels"
            android:layout_weight="0.85">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Label1"
                android:id="@+id/textView"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Label2"
                android:id="@+id/textView2"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Label3"
                android:id="@+id/textView3"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Label4"
                android:id="@+id/textView4"
                android:layout_weight="1"/>
        </LinearLayout>

        <TableLayout
            android:id="@+id/TrackGrid"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1"
            android:layout_weight="0.15"
            android:background="@color/background_tracks">

            <TableRow
                android:layout_weight="1">
                <TextView
                    android:text="T1"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:text="T2"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:text="T3"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:text="T4"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:text="T5"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:text="T6"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:text="T7"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:text="T8"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
            </TableRow>
            <TableRow
                android:layout_weight="1">
                <TextView
                    android:text="TEST"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
            </TableRow>
            <TableRow
                android:layout_weight="1">

                <TextView
                    android:text="TEST"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
            </TableRow>
            <TableRow
                android:layout_weight="1">
                <TextView
                    android:text="TEST"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/copy"
        android:id="@+id/copy_btn"
        android:layout_marginBottom="15dp"
        android:background="@color/bluelight"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/paste"
        android:id="@+id/paste_btn"
        android:background="@color/orangelight"
        android:layout_alignTop="@+id/copy_btn"
        android:layout_toRightOf="@+id/copy_btn"
        android:layout_marginLeft="15dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/delete_label"
        android:id="@+id/delete_btn"
        android:background="@color/redorange"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@+id/paste_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp" />


    <Button
        android:id="@+id/new_snd"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/new_sound"
        android:background="@color/new_btn"
        android:onClick="newSound"
        android:textSize="15dp"
        android:layout_alignTop="@+id/paste_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />



</RelativeLayout>